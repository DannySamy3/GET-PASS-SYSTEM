{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./types.d.ts"],
    "moduleResolution": "node",
    "target": "es2016",

    "module": "commonjs",

    "esModuleInterop": true,

    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
